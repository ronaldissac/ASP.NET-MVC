    @section scripts {
        <script>
            $(document).ready(function () {
                $(".nav-items").mouseover(function () {
                    // Hide all lists
                    $(".nav-list").stop().slideUp();

                    // Show the corresponding list with slideDown animation
                    var listId = $(this).attr("id") + "List";
                    $("#" + listId).stop().slideDown();
                });

                $(".nav-items").mouseout(function () {
                    // Hide the corresponding list with slideUp animation
                    var listId = $(this).attr("id") + "List";
                    $("#" + listId).stop().slideUp();
                });
            });
        </script>
    }
</body>
</html>
