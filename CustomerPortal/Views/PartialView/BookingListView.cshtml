    </svg>
                </span>
            </div>
            <div class="col">
                <label id="lbl">Booking List</label>
            </div>
            <div class="col">
                <a class=" text-white link-offset-1" href="javascript:void(0);" onclick="loadPartialView(1)">New booking</a>
                <label class="btn text-white" style="float: right; text-align:center" id="lbl_Date">Date: @DateTime.Now.Date.ToString("dd/MM/yy")</label>

            </div>
        </div>
        <div class="row bg-body-secondary">
            <table class="table table-borderless  table-secondary">
                <tbody>
                    <tr>
                        <td class="table-line">Shipper Name<label style="color:red">*</label></td>
                        <td><input type="text" disabled="disabled" id="txt_customer" class="form-control small-textbox disabled capitalized-text" value="@Session["customerName"].ToString()" /></td>
                        <td class="">Place of booking<label style="color:red">*&nbsp;</label></td>
                        <td>
                            <select id="dropdown_POB" style="text-align:center;width:100%;" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">COCHIN</option>
                                <option value="2">CHENNAI</option>
                                <option value="3">MUMBAI</option>
                            </select>
                        </td>
                        <td>Consignee<label style="color:red">*&nbsp;</label></td>
                        <td><input type="text" id="txt_consignee" style="text-align:center;" class="form-control small-textbox capitalized-text" /></td>
                    </tr>
                    <tr>
                        <td>Date of stacking<label style="color:red">*</label></td>
                        <td><input type="date" id="txt_Dos" class="form-control small-textbox"></td>
                        <td>Place of rec<label style="color:red">*</label></td>
                        <td>
                            <select id="dropdown_POR" style="text-align:center;width:100%" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">COCHIN</option>
                                <option value="2">CHENNAI</option>
                                <option value="3">MUMBAI</option>
                            </select>
                        </td>
                        <td>POD<label style="color:red">*</label></td>
                        <td>
                            <select id="dropdown_POD" style="text-align:center;width:100%" class="form-control dropdown small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">PORT KELANG</option>
                                <option value="2">JEBEL ALI</option>
                                <option value="3">DUBAI</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Voyage<label style="color:red">*</label></td>
                        <td>
                            <select id="dropdown_voyage" style="text-align:center;width:100%" class="form-control small-textbox text-capitalize">
                                <option value="0">SELECT</option>
                                <option value="1">WAN HAI 310 (@DateTime.Now.ToString("dd/mm/yy")) </option>
                                <option value="2">ABRAI COCHIN (@DateTime.Now.ToString("dd/mm/yy"))</option>
                                <option value="3">OCEANMAIL (@DateTime.Now.ToString("dd/mm/yy")) </option>
                            </select>
                        </td>
                        <td>Vessel<label style="color:red">*</label></td>
                        <td>
                            <select id="dropdown_vessel" style="text-align:center;width:100%" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">WAN HAI 310</option>
                                <option value="2">ABRAI COCHIN</option>
                                <option value="3">OCEANMAIL</option>
                            </select>
                        </td>
                        <td>Vessel Operator<label style="color:red">*</label></td>
                        <td>
                            <select id="dropdown_VesselOp" style="text-align:center;" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">MIHALA</option>
                                <option value="2">INTERASIA</option>
                                <option value="3">WAN HAI</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Pre Carriage</td>
                        <td>
                            <select id="dropdown_Pre" style="text-align:center;" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">BY RAIL</option>
                                <option value="2">BY ROAD</option>
                            </select>
                        </td>
                        <td>Dest Carriage</td>
                        <td>
                            <select id="dropdown_Dest" style="text-align:center;" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">BY RAIL</option>
                                <option value="2">BY ROAD</option>
                            </select>
                        </td>
                        <td>Type of Cargo</td>
                        <td>
                            <select id="dropdown_CargoTypes" style="text-align:center;" class="form-control small-textbox">
                                <option value="0">SELECT</option>
                                <option value="1">GEN</option>
                                <option value="2">HAZ</option>
                                <option value="3">OOG</option>
                                <option value="4">REEFER</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row Thead theme bg-gradient text-white">
            <div style="text-align:left; font-size:medium ">Cargo Details</div>
        </div>
        <div class="row">
            <table class="table table-secondary table-hover">
                <thead class="card-header">
                    <tr class="text-white align-items-sm-center">
                        @*<td class="text-center">Add</td>*@
                        <td class="text-center">SNO</td>
                        <td class="text-center">Container</td>
                        <td class="text-center">Qty</td>
                        <td class="text-center">Commodity</td>
                        <td class="text-center">Gr.Wt(KG)</td>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center align-items-center">
                        @*<td>
                                <button type="button" class="btn btn-outline-secondary" id="addrow">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                                    </svg>
                                </button>
                            </td>*@
                        <td>1</td>
                        <td>
                            <select id="dropdown_CargoType" class="form-control small-textbox text-center">
                                <option value="0">SELECT</option>
                                <option value="1">20ft</option>
                                <option value="2">40ft</option>
                            </select>
                        </td>
                        <td><input type="number" class="form-control small-textbox text-center" id="Cargo_Qty" /></td>
                        <td>
                            <select id="dropdown_Commodity" class="form-control small-textbox text-center">
                                <option value="0">SELECT</option>
                                <option value="1">GEN</option>
                                <option value="2">HAZ</option>
                                <option value="3">OOG</option>
                                <option value="4">REEFER</option>
                            </select>
                        </td>
                        <td><input type="number" class="form-control small-textbox text-center" id="Gr_wt" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <div style="text-align:right">
                <button style="" type="button" onclick="SaveBkg();" id="btn_save" class="btn btn-outline-success">SAVE</button>
                <button style="" type="button" hidden onclick="UpdateBkg();" id="btn_upd" class="btn btn-outline-info">UPDATE</button>
                <button type="button" onclick="DeleteBkg();" id="btn_delete" class="btn btn-outline-danger  ">DELETE</button>
                @*<button type="button" onclick="" id="btn_cancel" class="btn btn-outline-warning">CANCEL</button>*@
            </div>
            <div>
                <input type="hidden" id="rightDiv" value="@Session["HidID"].ToString()" />
                <input type="hidden" id="bkgID" value="0" />
            </div>
        </div>
        <br />
    </div>
</form>


