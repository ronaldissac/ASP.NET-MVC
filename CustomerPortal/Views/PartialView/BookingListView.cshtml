<form class="form-content capitalized-text" id="bkgform">
    <div class="container bg-gradient shadow overflow-auto">
        <div class="row align-items-center theme bg-gradient Thead text-white text-center">
            <div class="col float-start">
                Booking Ref:&nbsp;&nbsp;
                @*<input type="text" id="bkgref" class="small-textbox" style="width:175px;height:20px" />*@
                @Html.TextBox("name", null, new { @class = "small-textbox capitalized-text ", style = "width:175px;height:20px", required = "required", id = "bkgref" })
                <span type="button" class="btn btn-sm" onclick="GetBkg()">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" width="20" height="20" viewBox="0 0 256 256" xml:space="preserve">
